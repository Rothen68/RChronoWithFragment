<?xml version="1.0" encoding="utf-8"?><!--
buttonshapepressed.xml

Définit le fond du bouton à son état appuyé

-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="0dp" />
    <gradient
        android:angle="90"
        android:centerColor="#3EA849"
        android:centerX="35%"
        android:endColor="#3EA849"
        android:startColor="#3EA849"
        android:type="linear" />
    <size
        android:width="270dp"
        android:height="60dp" />
    <stroke
        android:width="8dp"
        android:color="#2E7D36" />
</shape>