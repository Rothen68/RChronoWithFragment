<?xml version="1.0" encoding="utf-8"?>
<!--
buttonshape.xml

Définit le fond du bouton à son état normal

-->
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <corners
        android:radius="10dp"
        />
    <gradient
        android:angle="90"
        android:centerX="35%"
        android:centerColor="#375970"
        android:startColor="#5286A8"
        android:endColor="#5286A8"
        android:type="linear"
        />
    <size
        android:width="270dp"
        android:height="60dp"
        />
    <stroke
        android:width="1dp"
        android:color="#2A313B"
        />
</shape>