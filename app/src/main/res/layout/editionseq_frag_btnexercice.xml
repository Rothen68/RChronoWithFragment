<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/editionseq_frag_btnexercice_creer"

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bouton"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/editionseq_frag_btnexercice_creer"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
            android:textColor="#ff000000"
            android:textSize="25sp" />

        <Button
            android:id="@+id/editionseq_frag_btnexercice_ajouter"

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bouton"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:singleLine="false"
            android:text="@string/editionseq_frag_btnexercice_ajouter"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
            android:textColor="#FF000000"
            android:textSize="25sp" />
    </LinearLayout>

</LinearLayout>